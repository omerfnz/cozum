# Django Settings
DJANGO_SETTINGS_MODULE=cozum_var_backend.settings
# Güvenli SECRET_KEY oluşturmak için: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-immediately
DEBUG=False

# Database Configuration
DB_NAME=cozum_var_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=5432

# Database Engine Switch (True=PostgreSQL, False=SQLite)
USE_POSTGRES=True

# Redis Configuration
REDIS_URL=redis://redis:6379/1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_USERNAME=admin
SERVER_EMAIL=server@yourdomain.com

# Domain Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Development için CORS_ALLOW_ALL_ORIGINS=True, Production için False
CORS_ALLOW_ALL_ORIGINS=False

# HTTPS ve Güvenlik Ayarları (Production için)
# HTTPS zorlaması (Production: True, Development: False)
SECURE_SSL_REDIRECT=False
# HSTS ayarları (Production için 31536000 = 1 yıl)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
# Güvenli Cookie ayarları (Production: True, Development: False)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Rate Limiting Ayarları
# Cache backend for rate limiting (Redis recommended for production)
RATELIMIT_USE_CACHE=default

# R2 / S3 Uyumlu Depolama (Cloudflare R2)
USE_R2=False
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
# Örn: media.example.com veya pub-xxxxxxx.r2.dev
R2_CUSTOM_DOMAIN=