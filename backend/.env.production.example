# Django Settings - PRODUCTION
DJANGO_SETTINGS_MODULE=cozum_var_backend.settings
# Güvenli SECRET_KEY oluşturmak için: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-here-CHANGE-THIS
DEBUG=False

# Database Configuration - PRODUCTION
DB_NAME=cozum_var_production_db
DB_USER=postgres
DB_PASSWORD=your-secure-production-db-password
DB_HOST=your-production-db-host
DB_PORT=5432
USE_POSTGRES=True

# Redis Configuration - PRODUCTION
REDIS_URL=redis://your-redis-host:6379/1

# Email Configuration - PRODUCTION
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-production-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-secure-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin Configuration - PRODUCTION
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-very-secure-admin-password
ADMIN_USERNAME=admin
SERVER_EMAIL=server@yourdomain.com

# Domain Configuration - PRODUCTION
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Production'da güvenlik için CORS_ALLOW_ALL_ORIGINS kapatılmalı
CORS_ALLOW_ALL_ORIGINS=False

# HTTPS ve Güvenlik Ayarları - PRODUCTION
# HTTPS zorlaması aktif
SECURE_SSL_REDIRECT=True
# HSTS ayarları - 1 yıl (31536000 saniye)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
# Güvenli Cookie ayarları aktif
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# R2 / S3 Uyumlu Depolama (Cloudflare R2) - PRODUCTION
USE_R2=True
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-production-bucket
R2_CUSTOM_DOMAIN=media.yourdomain.com